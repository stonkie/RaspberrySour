{
  "executable": "RaspberrySour",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "RaspberrySour",
  "author": "Kevin Coulombe",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "com.stonkie.RaspberrySour",
    "productName": "RaspberrySour",
    "copyright": "Copyright Â© 2020 ${author}",
    "buildVersion": "0.0.5-dev.CODEBUILD_BUILD_NUMBER",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/package"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ],
    "linux": {
      "target": ["AppImage"]
    },
    "appImage": 
    {
      "artifactName": "RaspberrySour.AppImage"
    }
  },
  "publish": {
    "provider": "github",
    "owner": "Kevin Coulombe",
    "publishAutoUpdate": true,
    "releaseType": "prerelease",
    "url" : "https://github.com/stonkie/RaspberrySour.git"
  },
  "github": {
    "provider" : "github",
    "repo" : "https://github.com/stonkie/RaspberrySour.git",
    "releaseType": "prerelease",
    "private": false
  }
}