{
  "executable": "RaspberrySour",
  "splashscreen": {
    "imageFile": ""
  },
  "name": "RaspberrySour",
  "author": "Kevin Coulombe",
  "singleInstance": true,
  "environment": "Production",
  "build": {
    "appId": "com.stonkie.RaspberrySour",
    "productName": "RaspberrySour",
    "copyright": "Copyright Â© 2020 ${author}",
    "buildVersion": "v0.0.5.$(Get-Date -UFormat \"%Y%m%d-%H%M%S\")",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/package"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  },
  "linux": {
    "target": "AppImage",
    "publish": ["github"]
  }
}